{
  "name": "trivia-quiz-backend",
  "version": "1.0.0",
  "description": "Backend for Trivia Quiz Application",
  "author": "David Cotelessa",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "seed": "ts-node scripts/seed.ts",
    "test": "NODE_ENV=test jest --config=jest.config.js",
    "test:coverage": "NODE_ENV=test jest --coverage --config=jest.config.js",
    "test:integration": "NODE_ENV=test jest \"__tests__/integration/\" --config=jest.config.js",
    "test:all": "NODE_ENV=test jest --config=jest.config.js --testPathIgnorePatterns=[]"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "mongoose": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "babel-jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
